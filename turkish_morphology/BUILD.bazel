load("@com_google_protobuf//:protobuf.bzl", "py_proto_library")
load("@rules_python//python:defs.bzl", "py_library", "py_test")
load("@turkish_morphology_deps//:requirements.bzl", "requirement")

package(default_visibility = ["//visibility:public"])

exports_files(["__init__.py"])

py_proto_library(
    name = "analysis_py_pb2",
    srcs = ["analysis.proto"],
    default_runtime = "@com_google_protobuf//:protobuf_python",
    protoc = "@com_google_protobuf//:protoc",
)

py_library(
    name = "analyze",
    srcs = ["analyze.py"],
    srcs_version = "PY3",
    deps = [
        ":fst",
    ],
)

py_test(
    name = "analyze_test",
    size = "small",
    srcs = ["analyze_test.py"],
    python_version = "PY3",
    srcs_version = "PY3",
    deps = [
        ":analyze",
        requirement("absl-py"),
    ],
)

py_library(
    name = "decompose",
    srcs = ["decompose.py"],
    srcs_version = "PY3",
    deps = [
        ":analysis_py_pb2",
    ],
)

py_test(
    name = "decompose_test",
    size = "small",
    srcs = ["decompose_test.py"],
    data = [
        ":test_analyses",
    ],
    python_version = "PY3",
    srcs_version = "PY3",
    deps = [
        ":analysis_py_pb2",
        ":decompose",
        requirement("absl-py"),
    ],
)

py_library(
    name = "fst",
    srcs = ["fst.py"],
    data = [
        "//src/analyzer:build_fst",
    ],
    srcs_version = "PY3",
    deps = [
        "@org_openfst//:pywrapfst",
    ],
)

py_library(
    name = "generate",
    srcs = ["generate.py"],
    srcs_version = "PY3",
    deps = [
        ":analysis_py_pb2",
        ":fst",
        ":pretty_print",
        "@org_openfst//:pywrapfst",
    ],
)

py_test(
    name = "generate_test",
    size = "small",
    srcs = ["generate_test.py"],
    data = [
        ":test_analyses",
    ],
    python_version = "PY3",
    srcs_version = "PY3",
    deps = [
        ":analysis_py_pb2",
        ":generate",
        requirement("absl-py"),
    ],
)

filegroup(
    name = "test_analyses",
    srcs = glob([
        "testdata/*.pbtxt",
    ]),
)

py_library(
    name = "pretty_print",
    srcs = ["pretty_print.py"],
    srcs_version = "PY3",
    deps = [
        ":analysis_py_pb2",
    ],
)

py_test(
    name = "pretty_print_test",
    size = "small",
    srcs = ["pretty_print_test.py"],
    data = [
        ":test_analyses",
    ],
    python_version = "PY3",
    srcs_version = "PY3",
    deps = [
        ":analysis_py_pb2",
        ":pretty_print",
        requirement("absl-py"),
    ],
)

py_library(
    name = "validate",
    srcs = ["validate.py"],
    srcs_version = "PY3",
    deps = [
        ":analysis_py_pb2",
    ],
)

py_test(
    name = "validate_test",
    size = "small",
    srcs = ["validate_test.py"],
    data = [
        ":test_analyses",
    ],
    python_version = "PY3",
    srcs_version = "PY3",
    deps = [
        ":analysis_py_pb2",
        ":validate",
        requirement("absl-py"),
    ],
)
