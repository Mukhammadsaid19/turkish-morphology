load("//bazel:thrax.bzl", "grm_compile")
load("@org_opengrm_thrax//:src/bazel/regression_test_build_defs.bzl", "grm_regression_test")

package(default_visibility = [
    "//src/analyzer:__pkg__",
    "//src/analyzer/morphophonemics:__pkg__",
])

grm_compile(
    name = "alphabet",
    deps = [
        "unicode.far",
        "unicode.grm",
    ],
)

# Base symbols table should only include the exact set of characters that can
# be observed in all possible input words to the morphological analyzer.
filegroup(
    name = "base_symbols",
    srcs = ["base_symbols.syms"],
)

grm_compile(
    name = "case_conversion",
    deps = [
        "alphabet.far",
        "alphabet.grm",
        "unicode.far",
        "unicode.grm",
    ],
)

grm_regression_test(
    name = "case_conversion_test",
    grammar = ":case_conversion",
)

grm_compile(
    name = "unicode",
)
